<div class="page-header">
  <h2>
    Optimal Stores
  </h2>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
          <table class="table table-striped table-hover">
            <tr>
              <!-- <th>Image</th> -->
              <th>Item</th>
              <th>Store</th>
              <th>Address</th>
            </tr>

            <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= @closest_stores[@items.index(item)]%></td>
              <td><%= @closest_stores_addresses[@items.index(item)]%></td>
            </tr>
            <% end %>
          </table>
        </div>

        <div class="col-md-6">
        </div>


    </div>
    <div class="row">
      <div class="page-header">
        <h2>
          Optimal Route
        </h2>
      </div>

        <div class="col-md-6">
          <h4>
            Map
          </h4>
          <iframe
          width="550"
          height="450"
          frameborder="0" style="border:0"
          src="<%= @embeded_map_link %>" allowfullscreen>
          </iframe>
        </div>

        <div class="col-md-6">
          <h4>
            Route Breakdown
          </h4>
          <table class="table table-striped table-hover">
            <tr>
              <!-- <th>Image</th> -->
              <th>Leg</th>
              <th>Destination Address</th>
            </tr>

            <% @optimized_waypoint_destination_addresses.each do |leg| %>
            <tr>
              <td><%= @optimized_waypoint_destination_addresses.index(leg)+1 %></td>
              <td><%= leg %></td>
            </tr>
            <% end %>
          </table>
        </div>
    </div>
</div>


