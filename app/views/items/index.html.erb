<div class="page-header">
  <h1>
    Shopping List
    <a href="/items/new" class="btn btn-lg btn-success">New Item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <!-- <th>Image</th> -->
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <!-- <td> <a href="<%= item.url %>">h</a> <%= item.image %></td> -->
        <td><%= item.name %></td>
        <td>
          <a href="/items/<%= item.id %>" class="btn btn-primary">Show</a>
          <a href="/items/<%= item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_item/<%= item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h1>
    Route Finder
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/errand_route">
      <div>
        <label for="the_address">My Location</label>
        <input type="text" name="user_street_address" id="the_address" placeholder="Enter Street Address Here">
        <button class="btn btn-lg btn-success">Map My Errand!</button>
      </div>

    </form>
  </div>
</div>
