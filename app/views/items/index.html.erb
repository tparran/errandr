
<div class="row">
  <div class="col-md-6">
    <div class="page-header">
      <h2>
        Shopping List
      </h2>
    </div>
    <table class="table table-striped table-hover">

      <% @items.each do |item| %>
      <tr>
        <!-- <td> <a href="<%= item.url %>">h</a> <%= item.image %></td> -->
        <td><%= item.name %></td>
        <td>
          <a href="/delete_item/<%= item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <a href="/edit/<%= item.id %>/" class="btn btn-warning" rel="nofollow">Edit</a>
        </td>
      </tr>
      <% end %>
    </table>
      <a href="/new" class="btn btn-lg btn-success">Add an Item</a>
  </div>

  <div class="col-md-6">

    <div class="page-header">
      <h2>
        Errand Router
      </h2>
    </div>

    <div class="row">
      <div class="col-md-12">
        <form action="/errand_route">
          <div>
            <label for="the_address">My Location</label>
            <input type="text" name="user_street_address" id="the_address" placeholder="Enter Street Address">
            <div class="">
              <button class="btn btn-lg btn-success">Map It!</button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
